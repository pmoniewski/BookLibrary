@model IEnumerable<BookLibrary.ViewModels.BookViewModel>

@{
	ViewData["Title"] = "Books Index";
}

<div class="container row p-0 m-0">
	<div class="col-6">
		<h1>@ViewData["Title"]</h1>
	</div>
	<div class="col-2 offset-4">
		<a asp-action="Create" class="btn btn-info form-control">Add New</a>
	</div>
	<div class="col-12 p-3">
		<table class="table">
			<thead>
				<tr>
					<th>
						@Html.DisplayNameFor(model => model.Isbn)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Title)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Author)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Status)
					</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Isbn)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Title)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Author)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Status)
					</td>
					<td>
						<a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
						<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
						<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
					</td>
				</tr>
			}
			</tbody>
		</table>
	</div>
</div>
